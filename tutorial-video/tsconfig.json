{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2017"
    ],
    "baseUrl": ".",
    "outDir": "./dist/",
    "strict": true,
    "module": "esnext",
    "target": "ES2017",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
